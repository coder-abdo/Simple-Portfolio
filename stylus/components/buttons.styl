.btn
    &--scroll
        margin-top 10rem
        font-size 5rem
        color $white
        animation up-down 2s linear infinite
        @keyframes up-down
            0%
                transform translateY(0)
                opacity 1
            100%
                transform  translateY(4rem)
                opacity 0.5
    &--play
        width 10rem
        height 10rem
        background-color $light-blue
        border-radius 50%
        flex(center, center)
        font-size 3rem
        color $white
        animation pulse 1s linear infinite
        @keyframes pulse 
            from
            to
                transform scale3d(1, 1, 1)
            50%
                transform scale3d(1.05, 1.05, 1.05)
    &--cta
        padding 1rem 2rem
        font-size 2rem
        background-color transparent
        border 1px solid $light-blue
        border-radius 10rem
        color $light-blue
        position relative
        z-index 1
        &::after
        &::after
            after-before()
            top 0
            left 0
            bottom 0
            right 0
            width 100%
            height 100%
            border-radius 10rem
            background-color transparent
            
        &::before
            z-index -1
        &::after
            transform scaleX(0)
            transform-origin center
            transition-property background-color, transform
            transition-duration 300ms
            transition-timing-function ease-in-out
            z-index -2
        &:hover
            color $white
            &::after
                background-color $light-blue
                transform scaleX(1)
        &.active
            color $white
            margin-right 0
            margin-bottom 2rem
            @media(min-width 37.5em)
                margin-right 2rem
            &::after
                background-color $light-blue
                transform scaleX(1)
            &:hover
                color $light-blue
                &::after
                    transform scaleX(0)
        &.white
            background-color transparent
            border-color $white
            color $white
            &::after
                background-color $white
            &:hover
                color $black
    &--blog
        color $dark-grey
        font-size 2rem
        font-weight 400
        transition color 150ms
        &:hover
            color $light-blue
            i
                margin-left 2rem
        i
            margin-left 1rem
            transition margin-left 300ms
    &--contact
        background-color $light-blue
        color $white
        font-size 2rem
        border 1px solid $light-blue
        padding 1rem 2rem
        border-radius 10rem
        margin 0 auto
        transition-property background-color, color
        transition-duration 300ms
        &:hover
            background-color $white
            color $light-blue
        &:focus
            outline none



.button
    padding 1rem 2rem
    font-size 1.6rem
    color $black
    background-color $grey
    border-radius 10rem
    border none 
    &.is-checked
        background-color $light-blue
        color $white
    &:not(:last-child)
        margin-right 2rem
    &:hover
        cursor pointer
    &:focus
        outline none

.buttonToTop
    position fixed
    bottom 1rem
    right 2rem
    width 6rem
    height 6rem
    border-radius 50%
    background-color $dark-grey
    color $white
    font-size 2rem
    flex(center, center)
    opacity 0
    visibility hidden
    transition-property opacity, visibility
    transition-duration 300ms
    z-index 10000
    border none
    &.show
        opacity 1
        visibility visible
    &:hover
        cursor pointer
    &:focus
        outline none
