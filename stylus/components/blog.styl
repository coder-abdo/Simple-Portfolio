@import 'base/varibales'
@import 'base/mixins'
@import 'base/general'
@import 'buttons'

.blog
    padding 6rem 3rem

    &__container
        display grid
        grid-template-rows repeat(3, 1fr)
        grid-template-columns 1fr
        grid-gap 4rem
        @media(min-width 50em)
            grid-template-rows 1fr
            grid-template-columns repeat(3, 1fr)
    &__story
        overflow hidden
        box-shadow 0 0 1rem 0 rgba(#333, .15)
        &:hover
            .blog__img
                transform scale(1.05)
        &:nth-child(1)
            .blog__img
                background-image url('../images/blog-01.jpg')
        &:nth-child(2)
            .blog__img
                background-image url('../images/blog-02.jpg')
        &:nth-child(3)
            .blog__img
                background-image url('../images/blog-03.jpg')
        .story
            padding 4rem 2rem
    &__img
        background-size cover
        background-position center center
        height 50rem
        width 100%
        transition transform 300ms
    &__tags
        font-size 1.5rem
        font-weight 400
        color $dark-grey
        flex(flex-start, center)
        margin-bottom 2rem
        i
            margin-right 1rem
        .tag
            margin-left 1rem
    &__title
        font-size 2.5rem
        font-weight 700
        color $black
        margin-bottom 2rem
        &:hover
            color $light-blue
    &__state
        font-size 1.8rem
        font-weight 400
        color $dark-grey
        margin-bottom 2rem