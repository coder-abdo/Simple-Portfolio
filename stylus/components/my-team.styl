@import 'base/varibales'
@import 'base/mixins'
@import 'base/general'
@import 'buttons'
.team
    background-color $white
    padding-top 10rem
    &__developers
        padding 0 4rem
        display grid
        grid-template-rows repeat(3, 50rem)
        grid-template-columns 1fr
        grid-gap 2rem
        @media(min-width 50em)
            grid-template-rows 50rem
            grid-template-columns repeat(3, 1fr)
.developer
    flex(flex-start, center)
    flex-direction column
    &:nth-child(1)
        .developer__img
            background-image url('../images/team-work-1.jpg')
    &:nth-child(2)
        .developer__img
            background-image url('../images/team-work-2.jpg')
    &:nth-child(3)
        .developer__img
            background-image url('../images/team-work-3.jpg')
    &__card
        width 100%
        position relative
        overflow hidden
        margin-bottom 2rem
        &:hover
            .developer__img
                transform scale(1.1)
            .developer__social
                transform scaleX(1)
    &__img
        min-width 100%
        height 40rem
        background-size cover
        background-position center center
        object-fit cover
        transition transform 300ms
    &__social
        position absolute
        top 0
        left 0
        height 100%
        width 6rem
        background-color $light-blue
        transition transform 300ms
        transition-delay 150ms
        transform scaleX(0)
        transform-origin top left
        flex(center, center)
        flex-direction column
        .icon
            flex(center, center)
            width 4rem
            height 4rem
            background-color transparent
            border-radius 50%
            color $white
            font-size 2rem
            transition-property background-color, color
            transition-duration 300ms
            &:not(:last-child)
                margin-bottom 2rem
            &:hover
                background-color $white
                color $light-blue
    &__name
        .name
            color $black
            font-size 2.5rem
            font-weight 700
        .job-name
            margin-top 1rem
            color $dark-grey
            font-size 2rem
            font-weight 400
        