@import 'base/varibales'
@import 'base/mixins'
.title
    &--experience
        @media(min-width 50em)
            grid-row 1 / 2
            grid-column 1 / -1
    text-align center
    font-family $ff
    margin-bottom 4rem
    .small
        font-size 2rem
        font-weight 400
        display block
        color $light-blue
    .big
        font-size 4rem
        font-weight 300
        display block
        strong
            margin-left 2rem
            letter-spacing .4rem
            font-weight 900
            position relative
            display inline-block
            z-index 100
            &::before
            &::after
                after-before()
                width 100%
                
            &::before
                background-color transparent
                z-index -1
                height 100%
            &::after
                height 40%
                left 0
                bottom -.5rem
                background-color $shaded-blue
                z-index -2
