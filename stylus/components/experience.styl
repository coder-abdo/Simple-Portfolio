@import 'base/varibales'
@import 'base/mixins'
@import 'base/general'
@import 'buttons'
.experience
    background-color $grey
    padding 10rem
    position relative
    @media(min-width 50em)
        display grid
        grid-template-rows 1fr repeat(3, 30rem)
        grid-gap 5rem
        grid-template-columns repeat(2, 1fr)
    &::before
    &::after
        after-before()
        border-bottom 50px solid $white
        bottom 0
    &::before
        border-right 70vw solid transparent
        left 0
    &::after
        border-left 30vw solid transparent
        right 0
    .job
        padding 2rem 1rem
        flex(space-between, flex-start)
        flex-direction column
        &:nth-child(1)
        &:nth-child(2)
        &:nth-child(3)
            grid-column 1 / 2
        &:nth-child(4)
        &:nth-child(5)
        &:nth-child(6)
            grid-column 2 / 3
        &:nth-child(1)
        &:nth-child(4)
            grid-row 2 / 3
        &:nth-child(2)
        &:nth-child(5)
            grid-row 3 / 4
        &:nth-child(3)
        &:nth-child(6)
            grid-row 4 / 5
        &:hover
            .job__year::after
                transform scaleY(1)
        &__year
            color $light-blue
            font-size 2rem
            font-weight 400
            position relative
            display inline-block
            z-index 100
            &::before
            &::after
                after-before()
                width 100%
                height 100%
                left 0
                bottom 0
            &::before
                background-color transparent
                z-index -1
            &::after
                background-color $shaded-blue
                transform scaleY(.4)
                transform-origin bottom left
                transition transform 300ms
                z-index -2
        &__title
            font-size 4rem
            font-weight 700
        &__desc
            font-size 1.8rem
            font-weight 400


    