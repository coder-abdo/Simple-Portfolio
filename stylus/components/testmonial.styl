@import 'base/varibales'
@import 'base/mixins'
@import 'base/general'
@import 'buttons'
@import 'titles'
.testmonial
    background-image url('../images/testimonials.jpg')
    background-size cover

.item
    flex(flex-start, center)
    flex-direction column
    padding 4rem
    &__img
        width 8rem
        height 8rem
        border-radius 50%
        border 2px solid $white
        margin-bottom 2rem
        img 
            width 100%
            height 100%
            border-radius 50%
    &__quote
        font-size 2rem
        color $white
        font-weight 300
        margin-bottom 2rem
    &__author
        font-size 3rem
        font-weight 700
        color $white
        position relative
        margin-bottom 2rem
        &::before
        &::after
            after-before()
            width 2rem
            height 2px
            background-color $white
            top 50%
            transform translateY(-50%)
        &::before
            left -2.5rem
        &::after
            right -2.5rem
    &__author-job
        font-size 2rem
        font-weight 700
        color $dark-grey



