@import 'base/varibales'
@import 'base/mixins'
@import 'base/general'
@import 'buttons'

.contact
    padding 6rem 3rem

    &__info
        flex(center, center)
        flex-direction column
        @media(min-width 50em)
            flex-direction row
            justify-content space-around
        .info-container
            flex(center, center)
            flex-direction column
            flex-wrap wrap
            margin-bottom 4rem
            .icon
                width 8rem
                height 8rem
                flex(center, center)
                font-size 3rem
                border-radius 50%
                background-color $light-blue
                color $white
                margin-bottom 2rem
                transition background-color 300ms
                &:hover
                    background-color $black
            .text
                font-size 2.2rem
                color $dark-grey
                font-weight 300

    &__connect
        display grid
        grid-template-rows repeat(3, 5rem) 6fr
        grid-template-columns 1fr
        grid-gap  4rem
        margin-bottom 4rem
        > *
            text-indent 2rem
            border 1px solid $dark-grey
        ::-webkit-input-placeholder
            color $dark-grey
        textarea
            padding 2rem 0
            font-size 2.2rem
        @media(min-width 50em)
            grid-template-rows repeat(2, 5rem) 6fr
            grid-template-columns repeat(2, 1fr)
            .name
                grid-row 1 / 2
                grid-column 1 / 2
            .email
                grid-row 1 / 2
                grid-column 2 / 3
            .subject
                grid-row 2 / 3
                grid-column 1 / -1
            .msg
                grid-row 3 / 4
                grid-column 1 / -1
