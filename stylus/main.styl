// VARIABLES
$blue = #1C2497
$light-blue = #2F3DFF
$shaded-blue = #D5D8FF
$grey = #F6F6F6
$black = #333333
$white = #fff
$ff = 'Open Sans', sans-serif
// MIXINS
flex($jc = flex-start, $ai = stretch)
    display flex
    justify-content $jc
    align-items $ai
// GENERAL STYLE
*
*::before
*::after
    padding 0
    margin 0
    box-sizing border-box

html
    font-size 50%
    height 100%
    @media(min-width 50em)
        font-size 62.5%

body
    font-family $ff
    height 100%

ul
li  
ol
    list-style-type none
a
a:hover
a:focus
    text-decoration none
// -------------------------------------------------
// BUTTONS
.btn
    &--scroll
        margin-top 15rem
        font-size 5rem
        color $white
        animation up-down 2s linear infinite
        @keyframes up-down
            0%
                transform translateY(0)
                opacity 1
            100%
                transform  translateY(4rem)
                opacity 0.5
//--------------------------------------------
// HEADER
.header
    height 100vh
    text-align center
    background-image linear-gradient(to right, rgba($black, .7), rgba(#000, 1)),url(../images/header-img.jpg)
    background-size cover
    background-position right top
    background-attachment fixed

    &__nav
        flex(space-between, center)
        height 8rem
        margin 0 auto
        position relative
        padding 2rem 8rem
        &.fixed
            position fixed
            top 0
            left 0
            right 0
            bottom 0
            background-color $white
            box-shadow 0 1px 1rem 0 rgba($black, .15)
            .nav__logo
                color $black
            .nav__link
                color $black
            .nav__btn
                span 
                    background-color $black
    .nav
        &__logo
            font-size 4rem
            font-weight 800
            color $white
        &__btn
            background-color initial
            height 4rem
            width 6rem
            flex(space-around, center)
            flex-direction column
            border none
            @media(min-width 50em)
                display none
            &.show
                .menu:first-child
                .menu:last-child
                    transform-origin center center
                .menu:first-child
                    transform rotate(45deg) translateY(12px) translateX(8px)
                .menu:nth-child(2)
                    opacity 0
                .menu:last-child
                    transform rotate(-45deg) translateY(-6px) translateX(1px)
            &:hover
                cursor pointer
            &:focus
                outline none
            .menu
                width 5rem
                height 1px
                background-color $white
                transition-property transform, opacity
                transition-duration 300ms
                transition-delay 150ms

        &__list
            background-color $white
            color $black
            position absolute
            top 100%
            right 4rem
            width 90%
            z-index 1000
            transition-property transform, opacity
            transition-duration 300ms
            transition-delay 150ms
            transform-origin top left
            @media(min-width 50em)
               flex(center, center)
               opacity 1
               transform scaleY(1)
               background-color transparent
               color $white
            &.hide
                opacity 0
                transform scaleY(0)
                @media(min-width 50em)
                    opacity 1
                    transform scaleY(1)
                    position relative
                    top 0
                    width 70%
        &__item
            color $light-blue
            text-align center
            flex(center, center)
            @media(min-width 50em)
                margin-right 4rem
            
        &__link
            padding 2rem 0
            display inline-block
            font-size 2.5rem
            color currentColor
            text-transform uppercase
            &.active
                color $light-blue
            @media(min-width 50rem)
                font-size 1.8rem
                color $white
                &:hover
                    color $light-blue
    &__home
        padding-top 10rem
        flex(center, center)
        flex-direction column
        color $white
        .small
            font-size 1.8rem
            font-weight 300
            margin-bottom 2rem
            text-align center
    &__title
        text-align left
        font-size 5rem
        margin-bottom 2rem
        font-weight 400
        #creative
            color $light-blue
            margin-left 2rem
            text-transform capitalize
    &__subtitle
        font-size 2.2rem
        margin-bottom 2rem
        font-weight 300
    &__social-links
        flex(center, center)
        margin-bottom 3rem
        .list
            &:not(:last-child)
                margin-right 2rem
        .social-link
            font-size 2rem
            color $white
            &:hover
                color $light-blue
